<?xml version="1.0" encoding="utf-8"?>
<openerp>

<data>
    <record model="ir.ui.view" id="view_form_create_project">
        <field name="name">view.form.create.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <newline/>
                    <label style="font-weight:bold; color: red" attrs="{'invisible': [('amount_overload','=',False)]}" string="Montant alloué dépassé" />
                    <field name="amount_overload" invisible="True"/>
                    <newline/>
                    <field name="amount_expected" on_change="_onchange_amount_expected(parent_id, amount_expected)" />
                    <newline/>
                    <field name="area" />
                    <newline/>
                    <field name="thematic" />
                </xpath>
            </data>
        </field>
    </record>
</data>
</openerp>
